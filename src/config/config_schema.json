{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Config",
    "type": "object",
    "required": [
        "DefaultProfile",
        "Profiles"
    ],
    "properties": {
        "DefaultProfile": {
            "$id": "#root/DefaultProfile",
            "title": "Defaultprofile",
            "type": "string",
            "default": "Default",
            "examples": [
                "Profile 1"
            ]
        },
        "MuteOnStartup": {
            "$id": "#root/MuteOnStartup",
            "title": "Muteonstartup",
            "type": [
                "integer",
                "boolean"
            ],
            "default": 0
        },
        "PreferTheme": {
            "$id": "#root/PreferTheme",
            "title": "Prefertheme",
            "type": "integer",
            "examples": [
                0,
                1,
                -1
            ],
            "default": -1
        },
        "Profiles": {
            "$id": "#root/Profiles",
            "title": "Profiles",
            "type": "array",
            "default": [],
            "items": {
                "$id": "#root/Profiles/items",
                "title": "Profile",
                "type": "object",
                "required": [
                    "Microphone",
                    "ProfileName"
                ],
                "properties": {
                    "afkTimeout": {
                        "$id": "#root/Profiles/items/afkTimeout",
                        "title": "Afktimeout",
                        "type": "integer",
                        "examples": [
                            2,
                            5
                        ],
                        "default": 0
                    },
                    "ExcludeFullscreen": {
                        "$id": "#root/Profiles/items/ExcludeFullscreen",
                        "title": "Excludefullscreen",
                        "type": [
                            "integer",
                            "boolean"
                        ],
                        "default": 0
                    },
                    "LinkedApp": {
                        "$id": "#root/Profiles/items/LinkedApp",
                        "title": "Linkedapp",
                        "type": "string",
                        "default": "",
                        "examples": [
                            "example.exe"
                        ],
                        "pattern": "^|(.*\\.exe)$"
                    },
                    "Microphone": {
                        "$id": "#root/Profiles/items/Microphone",
                        "title": "Microphone",
                        "type": "array",
                        "default": [],
                        "items": {
                            "$id": "#root/Profiles/items/Microphone/items",
                            "title": "Microphone Object",
                            "type": "object",
                            "required": [
                                "MuteHotkey",
                                "Name",
                                "PushToTalk",
                                "UnmuteHotkey"
                            ],
                            "properties": {
                                "MuteHotkey": {
                                    "$id": "#root/Profiles/items/Microphone/items/MuteHotkey",
                                    "title": "Mutehotkey",
                                    "type": "string",
                                    "default": "",
                                    "examples": [
                                        "~*<^R",
                                        "*RShift"
                                    ]
                                },
                                "Name": {
                                    "$id": "#root/Profiles/items/Microphone/items/Name",
                                    "title": "Microphone name",
                                    "type": "string",
                                    "default": "",
                                    "examples": [
                                        "Microphone (Desktop Mini Mic)"
                                    ]
                                },
                                "PushToTalk": {
                                    "$id": "#root/Profiles/items/Microphone/items/PushToTalk",
                                    "title": "Pushtotalk",
                                    "type": [
                                        "integer",
                                        "boolean"
                                    ],
                                    "default": 0
                                },
                                "UnmuteHotkey": {
                                    "$id": "#root/Profiles/items/Microphone/items/UnmuteHotkey",
                                    "title": "Unmutehotkey",
                                    "type": "string",
                                    "default": "",
                                    "examples": [
                                        "~*<^R",
                                        "~RCtrl"
                                    ]
                                }
                            }
                        }
                    },
                    "OnscreenFeedback": {
                        "$id": "#root/Profiles/items/OnscreenFeedback",
                        "title": "Onscreen feedback",
                        "type": [
                            "integer",
                            "boolean"
                        ],
                        "default": 0
                    },
                    "OSDPos": {
                        "$id": "#root/Profiles/items/OSDPos",
                        "title": "OSD position",
                        "type": "object",
                        "required": [
                            "x",
                            "y"
                        ],
                        "properties": {
                            "x": {
                                "$id": "#root/Profiles/items/OSDPos/x",
                                "title": "X coordinate",
                                "type": "integer",
                                "examples": [
                                    150
                                ],
                                "default": -1
                            },
                            "y": {
                                "$id": "#root/Profiles/items/OSDPos/y",
                                "title": "Y coordinate",
                                "type": "integer",
                                "examples": [
                                    340
                                ],
                                "default": -1
                            }
                        }
                    },
                    "ProfileName": {
                        "$id": "#root/Profiles/items/ProfileName",
                        "title": "Profile name",
                        "type": "string",
                        "default": "",
                        "examples": [
                            "Default"
                        ]
                    },
                    "PTTDelay": {
                        "$id": "#root/Profiles/items/PTTDelay",
                        "title": "Ptt delay",
                        "type": "integer",
                        "examples": [
                            250,
                            50
                        ],
                        "default": 100
                    },
                    "SoundFeedback": {
                        "$id": "#root/Profiles/items/SoundFeedback",
                        "title": "Sound feedback",
                        "type": [
                            "integer",
                            "boolean"
                        ],
                        "default": 0
                    },
                    "UpdateWithSystem": {
                        "$id": "#root/Profiles/items/UpdateWithSystem",
                        "title": "Update with system",
                        "type": [
                            "integer",
                            "boolean"
                        ],
                        "default": 1
                    }
                }
            }
        },
        "SwitchProfileOSD": {
            "$id": "#root/SwitchProfileOSD",
            "title": "Switching-profile OSD",
            "type": ["integer","boolean"],
            "default": 1
        },
        "UseCustomSounds": {
            "$id": "#root/UseCustomSounds",
            "title": "Use custom sounds",
            "type": ["integer","boolean"],
            "default": 0
        }
    }
}
